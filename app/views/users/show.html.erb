<!--_list.htmlにも貼り付ける-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <!--編集する場合の条件分岐-->
      <% if @user.id == current_user.id %>
          <!--編集用ボタン-->
          <div class=" button">
            <%= link_to "", edit_user_path(@user), class: "user_edit col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>
      <% end %>
      <!--本投稿-->
      <h2>New book</h2>
      <%= form_with(model:@book, local:true) do |f| %>
        <!--error message-->
        <% if @book.errors.any? %>
          <div class="form-error">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <!--post form-->
          <div class= "post">
              <%= f.label :title %>
              <br><%= f.text_field :title %></br>
              <br><%= f.label :body %><br>
              <%= f.text_area :body %>
              <div class=" button"><%= f.submit 'Create Book' %></div>
      <% end %>
          </div>
    </div>
<!--投稿一覧-->
    <div class="col-xs-9">
      <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th class= "table1">Title</th>
            <th class= "table2">Body</th>
            <th colspan ="3" class="table3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
