<!--error message-->
<% if @book.errors.any? %>
  <div class="form-error">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!--user show-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to @user.followed.count, follow_user_path(@user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to @user.follower.count, followers_user_path(@user) %></th>
          </tr>
        </tbody>
      </table>
      <!--フォローボタン-->
      <% unless current_user?(@user) %>
        <% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', unfollowing_user_path(@user.id), method: :POST, class: "btn btn-success" %>
        <% else %>
          <%= link_to 'フォローする', follow_user_path(@user.id), method: :POST, class: "btn btn-warning" %>
        <% end %>
      <% end %>
      <!--編集する場合の条件分岐-->
      <% if @user.id == current_user.id %>
          <!--編集用ボタン-->
          <div class=" button">
            <%= link_to "", edit_user_path(@user), class: "user_edit col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>
      <% end %>
      <!--本投稿-->
      <h2>New book</h2>
      <%= form_with(model:@book, local:true) do |f| %>
        
        <!--post form-->
          <div class= "post">
              <%= f.label :title %>
              <br><%= f.text_field :title, class: "col-xs-12" %></br>
              <br><%= f.label :opinion %><br>
              <%= f.text_area :body, class: "col-xs-12" %>
              <div class=" button"><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></div>
      <% end %>
          </div>
    </div>
<!--投稿一覧-->
    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th class= "table1"></th>
            <th class= "table2">Title</th>
            <th colspan ="3" class="table3">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
            <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td>
            <div id="favorites_buttons_<%= book.id %>">
                 <%= render 'favorites/favorites', { book: book} %>
            </div>
            </td>
             <td>
                コメント数：<%= book.book_comments.count %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
