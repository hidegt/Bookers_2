<!--user index-->
<div class= "container">
  <div class= "row">
    <%= render 'users/list', user: @user, book: @book %>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th class= "table1">image</th>
            <th class= "table2">name</th>
            <th colspan ="3" class="table3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpeg" %>
            </td>
            <td><%= user.name %></td>
            <td><%= "フォロー数: #{user.follower.count}" %></td>
            <td><%= "フォロワー数: #{user.followed.count}" %></td>
            <td>
              <% unless current_user?(user) %>
                <% if current_user.following?(user) %>
                  <%= link_to 'フォロー外す', unfollowing_user_path(user.id), method: :POST %>
                <% else %>
                  <%= link_to 'フォローする', follow_user_path(user.id), method: :POST %>
                <% end %>
              <% end %>
            </td>
            <td class="link"><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>