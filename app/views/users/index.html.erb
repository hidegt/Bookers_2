<!--user index-->
<div class= "container">
  <div class= "row">
    <%= render 'users/list', user: @user.user, book: @book %>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table>
        <thead>
          <tr>
            <th class= "table1">image</th>
            <th class= "table2">name</th>
            <th colspan ="3" class="table3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user.profile_image, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            </td>
            <td><%= user.books.title %></td>
            <td class="link"><%= link_to "show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>