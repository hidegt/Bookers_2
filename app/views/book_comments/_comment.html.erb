<% book.book_comments.each do |book_comment| %>
  <div class="row">
    <div class="col-xs-9">
    <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
    <%= book_comment.user.name %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "delete", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger" %>
    <% end %>
    </div>
  </div>
<% end %>