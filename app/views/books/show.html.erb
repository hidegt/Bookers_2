<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book %>
      <!--books show-->
     <h1>Book detail</h1>
      <table>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              <%= @user.name %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td class="link"><%= link_to("Edit", edit_book_path(book.id) %></td>
            <td class= "link">
              <%= link_to "Destroy",destroy_book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %>
            </td>
          </tr>
        </tbody>
      </table>
  </div>
</div>