<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
		  <h1>Editing Book</h1>

		  <!--error message-->
        <% if @book.errors.any? %>
          <div class="form-error">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
