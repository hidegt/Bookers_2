<!--books index-->
<div class= "container">
  <div class= "row">
    <%= render 'users/list', user: @user, book: @book %>
    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th class= "table1">Title</th>
            <th class= "table2">Opinion</th>
            <th colspan ="3" class="table3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
              <!--ルートパス (book.***)の***の部分は持ってきたい値をいれる。今回はユーザーページに行きたいので、book.userとなる-->
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              <% end %>

            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td>
              <div id="favorites_buttons_<%= book.id %>">
                 <%= render 'favorites/favorites', { book: book} %>
                </div>
            </td>
            <td><%= link_to "コメント数：#{book.book_comments.count}", book_path(book.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
